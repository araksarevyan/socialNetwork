<!DOCTYPE html>
<html lang="en">

<head>
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- <script  type="text/javascript"  src="test.js"></script> -->
	<title>Document</title>
</head>

<body>
	<main>
		<form class="post-form" action="/admin/addNewUser" method="POST">
			<div class="form-control">
				<label for="firstName">First Name</label>
				<input type="text" name="firstName" id="title">
			</div>
			<div class="form-control">
				<label for="lastName">Last Name</label>
				<input type="text" name="lastName" id="title">
			</div>
			<div class="form-control">
				<label for="imageUrl">Image URL</label>
				<input type="text" name="imageUrl" id="imageUrl" value="">
			</div>
			<div class="form-control">
				<label for="postArea">Your Post</label>
				<input type="text" name="postArea" id="postArea" value="">
			</div>
			<div>
				<button class="postBtn" type="submit">Post</button>
			</div>

		</form>
	</main>
	<div class="grid">
		<% for (let post of allPosts) { %>
			<article class="card">
				<div class="card__header">
					<div class="header-area">
						<div class="header-area-img">
							<img src="https://img.freepik.com/premium-vector/human-profile-icon-genderless-vector-illustration_276184-158.jpg"
								alt="">
						</div>
						<div class="header-area-firstName">
							<div class="header-area-firs-last-name">
								<h3 class="firstName-area">
									<%= post.firstName %>
								</h3>
								<h3 class="lastName-area">
									<%= post.lastName %>
								</h3>
							</div>
							<div class="header-area-time">
								<p>
									<%= post.value %>
								</p>
							</div>
						</div>
						<div class="header-area-edit-delete">
							<form class="product-form" action="/admin/deleteUser/<%= post.postId %>" method="POST">
								<button class="btn" type="submit"><i class="fa fa-times"
										aria-hidden="true"></i></button>
							</form>
							<a href="/admin/editUserData/<%= post.postId %>" class="btn" type="submit"><i
									class="fa fa-ellipsis-h" aria-hidden="true"></i>
							</a>
						</div>
					</div>

					<div class="post-text-area">
						<p>
							<%= post.postArea %>
						</p>
					</div>
					<div class="post-image">
						<img src="<%= post.imageUrl %>" alt="<%= post.firstName %>">
					</div>
					<div class="icons-comments-part">
						<div class="icons-comments-part-icons">
							<i class="fa fa-thumbs-up" aria-hidden="true"></i>
							<i class="fa fa-heart" aria-hidden="true"></i>
							<%= post.clickCount %>
						</div>
						<div class="icons-comments-part-comment">
							<p>1 comment 24 shares</p>
						</div>
					</div>
					<div class="like-comment-share-icons">
						<form class="fa-thumbs-icon" action="/admin/postsAddLike/<%= post.postId %>" method="POST">
							<button class="btn" type="submit"><i class="fa fa-thumbs-o-up"
									aria-hidden="true">Like</i></button>
						</form>
						<form class="fa-comment-icon" action="/admin/postsWriteComment/<%= post.postId %>" method="POST">
							<button class="btn" type="submit"><i class="fa fa-comment-o"
									aria-hidden="true">Comment</i></button>
						</form>
						<form class="fa-share-icon" action="/admin/postsWriteComment/<%= post.postId %>" method="POST">
							<button class="btn" type="submit"><i class="fa fa-share"
									aria-hidden="true">Share</i></button>
						</form>
					</div>

					<% for (let i of comments) { %>
					<% if (i.postId == post.postId) { %>
						<div class="new-comment">
							<div class="new-comment-image">
								<img src="https://upload.wikimedia.org/wikipedia/en/thumb/0/04/Facebook_f_logo_%282021%29.svg/1200px-Facebook_f_logo_%282021%29.svg.png"
									alt="">
							</div>
							<div class="new-comment-text-area-like-reply">
								<div class="new-comment-text-area">
									<div class="new-comment-name">
										<h5>Name</h5>
										<h5>Lastname</h5>
									</div>
									<div class="new-comment-text">
										<p class="commentText" data-postid="<%= post.postId %>"
											data-id="<%= i.commentId %>">
											<%= i.text %>
										</p>

									</div>
								</div>

								<div class="new-comment-like-reply">
									<ul>
										<li>17h</li>
										<li>Like</li>
										<li>Reply</li>
									</ul>
								</div>
							</div>
							<div class="comment-edit-delete">
								<button id="edit-form" class="btn" type="submit"><i class="fa fa-ellipsis-h"
										aria-hidden="true"></i></button>
								<form class="delete-form"
									action="/admin/deleteComment/<%= post.postId %>/<%= i.commentId %>" method="POST">
									<button class="btn" type="submit"><i class="fa fa-times"
											aria-hidden="true"></i></button>
								</form>
							</div>

						</div>
					<% } %>
					<% } %>

							<div class="writing-comment-area">
								<div class="writing-comment-area-image">
									<img src="https://img.freepik.com/premium-vector/human-profile-icon-genderless-vector-illustration_276184-158.jpg"
										alt="">
								</div>
								<div class="writing-comment-area-input-icons">
									<div class="writing-comment-area-input">
										<form class="product-form" action="/admin/postsWriteComment/<%= post.postId %>"
											method="POST">
											<input type="text" name="writeComment" id="postArea" value="">
											<button class="btn" type="submit"><i class="fa fa-paper-plane"
													aria-hidden="true"></i></button>
										</form>
										<div class="writing-comment-area-icons">
											<i class="fa fa-star" aria-hidden="true"></i>
											<i class="fa fa-smile-o" aria-hidden="true"></i>
											<i class="fa fa-camera" aria-hidden="true"></i>
											<i class="fa fa-git-square" aria-hidden="true"></i>
											<i class="fa fa-smile-o" aria-hidden="true"></i>
										</div>
									</div>

								</div>
							</div>
				</div>
			</article>
			<% } %>
	</div>
	<script src="client.js"></script>
</body>

</html>